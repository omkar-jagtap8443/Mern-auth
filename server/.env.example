# Server
PORT=4000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/auth_system

# JWT Secrets and TTLs
JWT_ACCESS_SECRET=replace-with-strong-random-string
JWT_REFRESH_SECRET=replace-with-another-strong-random-string
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Mailer
SMTP_USER=your-brevo-user
SMTP_PASS=your-brevo-pass
SENDER_EMAIL=you@example.com

# CORS
CORS_ORIGIN=http://localhost:3000
